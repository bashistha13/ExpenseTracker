@model ExpenseTracker.Models.Expense

@{
    ViewData["Title"] = "Add Expense";
}

<h1>Add New Expense</h1>

<form asp-action="Create" method="post">
    <div>
        <label>Name</label>
        <input asp-for="Name" class="input-field" />
    </div>
    <div>
        <label>Amount</label>
        <input asp-for="Amount" type="number" step="0.01" class="input-field" />
    </div>
    <div>
        <label>Category</label>
        <input asp-for="Category" class="input-field" />
    </div>
    <div>
        <label>Date</label>
        <input asp-for="Date" type="date" class="input-field" />
    </div>
    <button type="submit" class="btn-submit">Add</button>
</form>

<style>
    h1 { color: #333; font-family: Arial, sans-serif; }
    .input-field { display: block; margin-bottom: 10px; padding: 6px; width: 250px; }
    .btn-submit { padding: 8px 15px; background-color: #2196F3; color: white; border: none; border-radius: 5px; cursor: pointer; }
    .btn-submit:hover { background-color: #0b7dda; }
</style>
