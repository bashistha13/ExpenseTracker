@model ExpenseTracker.Models.Expense

<h2>Delete Expense</h2>
<h4>Are you sure you want to delete this expense?</h4>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <p>
        <strong>Name:</strong> @Model.Name <br />
        <strong>Description:</strong> @Model.Description <br />
        <strong>Amount:</strong> @Model.Amount <br />
        <strong>Category:</strong> @Model.Category <br />
        <strong>Date:</strong> @Model.Date.ToShortDateString() <br />
    </p>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
