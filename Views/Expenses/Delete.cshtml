@model ExpenseTracker.Models.Expense
@{
    ViewData["Title"] = "Delete Expense";
}

<div class="form-card">
    <h2>Delete Expense</h2>

    <div class="confirm">
        <p>Are you sure you want to delete this expense?</p>
        <dl>
            <dt>Description</dt><dd>@Model.Description</dd>
            <dt>Amount</dt><dd>â‚¨ @Model.Amount.ToString("N2")</dd>
            <dt>Category</dt><dd>@Model.Category</dd>
            <dt>Date</dt><dd>@Model.Date.ToString("yyyy-MM-dd")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn danger">Delete</button>
            <a asp-action="Index" class="btn">Cancel</a>
        </form>
    </div>
</div>

