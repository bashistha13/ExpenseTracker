@model IEnumerable<ExpenseTracker.Models.Expense>

@{
    ViewData["Title"] = "Expenses";
}

<h1>Expense Tracker</h1>
<a href="/Expenses/Create" class="btn-add">Add Expense</a>

<table class="expense-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var expense in Model)
    {
        <tr>
            <td>@expense.Name</td>
            <td>@expense.Amount</td>
            <td>@expense.Category</td>
            <td>@expense.Date.ToShortDateString()</td>
        </tr>
    }
    </tbody>
</table>

<style>
    h1 { color: #333; font-family: Arial, sans-serif; }
    .btn-add { padding: 8px 15px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 5px; }
    .expense-table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    .expense-table th, .expense-table td { border: 1px solid #ddd; padding: 8px; text-align: left; }
    .expense-table th { background-color: #f2f2f2; }
</style>
